<% layout('layout/boilerplate') -%>
<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <style>
        :root {
            --primary-color: #007bff;
            --secondary-color: #28a745;
            --accent-color: #ffc107;
            --text-color: #333;
            --background-color: #f0f2f5;
        }

        body {
            background-color: var(--background-color);
            color: var(--text-color);
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .product-container {
            display: flex;
            max-width: 1200px;
            margin: 50px auto;
            background-color: #ffffff;
            border-radius: 20px;
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            position: relative;
        }

        .product-container::before {
            content: '';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            /* background: radial-gradient(circle, rgba(255,255,255,0.8) 0%, rgba(255,255,255,0) 70%); */
            transform: rotate(45deg);
            z-index: 1;
            pointer-events: none;
        }

        .product-image {
            flex: 1;
            overflow: hidden;
            position: relative;
        }

        .product-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.5s ease;
        }

        .product-image:hover img {
            transform: scale(1.1);
        }

        .product-details {
            flex: 1;
            padding: 40px;
            display: flex;
            flex-direction: column;
            position: relative;
            z-index: 2;
        }

        .product-header {
            margin-bottom: 20px;
        }

        .product-title {
            font-size: 2.5rem;
            color: var(--primary-color);
            margin-bottom: 10px;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.1);
        }

        .product-rating {
            display: flex;
            align-items: center;
            font-size: 1.2rem;
        }

        .stars {
            color: var(--accent-color);
            margin-right: 10px;
        }

        .star-outline {
            color: #ddd;
        }

        .review-count {
            color: #777;
        }

        .product-price-container {
            font-size: 2rem;
            color: var(--secondary-color);
            margin-bottom: 20px;
            display: flex;
            align-items: baseline;
        }

        .currency {
            font-size: 1.5rem;
            margin-right: 5px;
        }

        .discount {
            font-size: 1rem;
            color: #dc3545;
            margin-left: 10px;
            padding: 5px 10px;
            background-color: #ffeaea;
            border-radius: 20px;
        }

        .product-highlights {
            display: flex;
            justify-content: space-between;
            margin-bottom: 20px;
        }

        .highlight {
            display: flex;
            align-items: center;
            font-size: 0.9rem;
            color: #555;
        }

        .highlight i {
            margin-right: 5px;
            color: var(--primary-color);
        }

        .product-description {
            font-size: 1rem;
            line-height: 1.6;
            margin-bottom: 30px;
            color: #666;
        }

        .product-variants {
            margin-bottom: 30px;
        }

        .product-variants h3 {
            font-size: 1.2rem;
            margin-bottom: 10px;
            color: #444;
        }

        .color-options {
            display: flex;
            gap: 10px;
        }

        .color-option {
            width: 30px;
            height: 30px;
            border: none;
            border-radius: 50%;
            cursor: pointer;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .color-option:hover {
            transform: scale(1.2);
            box-shadow: 0 0 10px rgba(0,0,0,0.3);
        }

        .action-buttons {
            display: flex;
            gap: 15px;
            margin-top: auto;
        }

        .btn {
            padding: 12px 24px;
            border: none;
            border-radius: 30px;
            cursor: pointer;
            transition: all 0.3s ease;
            font-weight: bold;
            text-transform: uppercase;
            letter-spacing: 1px;
            position: relative;
            overflow: hidden;
        }

        .btn::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(120deg, transparent, rgba(255,255,255,0.3), transparent);
            transition: all 0.5s;
        }

        .btn:hover::before {
            left: 100%;
        }

        .btn-cart {
            background-color: var(--secondary-color);
            color: white;
        }

        .btn-ar {
            background-color: var(--primary-color);
            color: white;
        }

        .btn-update {
            background-color: var(--primary-color);
            color: white;
        }

        .btn-delete {
            background-color: #dc3545;
            color: white;
        }

        .social-proof {
            margin-top: 30px;
            padding: 20px;
            background-color: #f8f9fa;
            border-radius: 10px;
            font-style: italic;
            color: #555;
            position: relative;
        }

        .social-proof::before {
            content: '\201C';
            font-size: 4rem;
            color: var(--primary-color);
            position: absolute;
            top: -20px;
            left: 10px;
            opacity: 0.2;
        }

        .review-section {
            max-width: 1200px;
            margin: 50px auto;
            background-color: #ffffff;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            padding: 40px;
        }

        .review-form {
            margin-bottom: 40px;
        }

        .star-rating {
            font-size: 2rem;
            color: #ffc107;
            cursor: pointer;
        }

        .review-input {
            width: 100%;
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 5px;
            margin-top: 10px;
        }

        .review-list {
            list-style-type: none;
            padding: 0;
        }

        .review-item {
            background-color: #f8f9fa;
            border-radius: 10px;
            padding: 20px;
            margin-bottom: 20px;
        }

        .review-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 10px;
        }

        .review-author {
            font-weight: bold;
            color: #007bff;
        }

        .review-rating {
            color: #ffc107;
        }

        .review-text {
            line-height: 1.6;
        }
    </style>
</head>

<div class="product-container">
    <div class="product-image">
        <img src="<%=product.img%>" alt="<%=product.name%>">
    </div>
    <div class="product-details">
        <div class="product-header">
            <h1 class="product-title"><%= product.name %></h1>
            <div class="product-rating">
                <div class="stars">★★★★<span class="star-outline">★</span></div>
                <span class="review-count">128 reviews</span>
            </div>
        </div> 
        
        <div class="product-price-container">
            <span class="currency">₹</span>
            <span class="price"><%= product.price %></span>
            <span class="discount">20% OFF</span>
        </div>
        
        <div class="product-highlights">
            <div class="highlight"><i class="fas fa-truck"></i> Free Shipping</div>
            <div class="highlight"><i class="fas fa-undo"></i> 30-Day Returns</div>
            <div class="highlight"><i class="fas fa-shield-alt"></i> 2-Year Warranty</div>
        </div>
        
        <p class="product-description"><%= product.desc %></p>
        
        <div class="product-variants">
            <h3>Choose a Color:</h3>
            <div class="color-options">
                <button class="color-option" style="background-color: #ff4136;"></button>
                <button class="color-option" style="background-color: #0074D9;"></button>
                <button class="color-option" style="background-color: #2ECC40;"></button>
            </div>
        </div>
        
        <div class="action-buttons">
            <% if(currentUser && currentUser.identity === 'buyer') { %>
                <a class="white" href="/products/<%=product._id%>/<%= currentUser._id%>/cart" ><button onclick="window.location.href=`/${product._id/cart}`" class="btn btn-cart"><i class="fas fa-shopping-cart"></i> Add to Cart</button></a>
                <button class="btn btn-ar"><i class="fas fa-vr-cardboard"></i> AR Preview</button>
            <% } %>
            <% if(currentUser && currentUser.identity === 'seller') { %>
                <a class="white"  href="/products/<%=product._id%>/edit"><button class="btn btn-update"><i class="fas fa-edit"></i>UPDATE</button></a>
                
                <form action="/products/<%=product._id%>?_method=DELETE" method="post">
                    <button class="btn btn-delete"><i class="fas fa-trash"></i> Delete</button>    
                </form>
            <% } %>
        </div>
        
        <div class="social-proof">
            <blockquote>"Best purchase I've made this year!" - Happy Customer</blockquote>
        </div>
    </div>
</div>

<div class="review-section">
    <h2>Customer Reviews</h2>
    <form class="review-form" action="/products/<%=product._id%>/review" method="post">
        <div class="star-rating">
            <i class="far fa-star" data-rating="1"></i>
            <i class="far fa-star" data-rating="2"></i>
            <i class="far fa-star" data-rating="3"></i>
            <i class="far fa-star" data-rating="4"></i>
            <i class="far fa-star" data-rating="5"></i>
        </div>
        <input type="hidden" name="rating" id="rating-value">
        <textarea class="review-input" name="text" rows="4" placeholder="Write your review here..."></textarea>
        <button class="btn btn-cart" type="submit">Submit Review</button>
    </form>

    <ul class="review-list">
        <% for(let review of product.review) { %>
            <li class="review-item">
                <div class="review-header">
                    <span class="review-author"><i class="fas fa-user"></i> <%= review.owner %></span>
                    <span class="review-rating">
                        <% for(let i = 1; i <= 5; i++) { %>
                            <i class="fas fa-star <%= i <= review.rating ? 'checked' : '' %>"></i>
                        <% } %>
                    </span>
                </div>
                <p class="review-text"><%= review.text %></p>
            </li>
        <% } %>
    </ul>
</div>

<script>
    // Star rating functionality
    const stars = document.querySelectorAll('.star-rating i');
    const ratingInput = document.getElementById('rating-value');

    stars.forEach(star => {
        star.addEventListener('click', () => {
            const rating = star.getAttribute('data-rating');
            ratingInput.value = rating;
            updateStars(rating);
        });

        star.addEventListener('mouseover', () => {
            const rating = star.getAttribute('data-rating');
            updateStars(rating);
        });

        star.addEventListener('mouseout', () => {
            updateStars(ratingInput.value);
        });
    });

    function updateStars(rating) {
        stars.forEach(star => {
            const starRating = star.getAttribute('data-rating');
            if (starRating <= rating) {
                star.classList.replace('far', 'fas');
            } else {
                star.classList.replace('fas', 'far');
            }
        });
    }
</script>